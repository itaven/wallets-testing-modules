{
  "git":{
    "requireCleanWorkingDir": false
  },
  "plugins": {
    "@release-it/bumper": {
      "in": "package.json",
      "folders": ["dist/packages/*"]
    },
    "@release-it/conventional-changelog": {
      "preset": "angular"
    },
    "@release-it/github": {
      "releaseName": "Release {{version}}"
    },
    "@release-it-plugins/workspaces": {
      "workspaces": ["dist/packages/*"]
    }
  }
}
