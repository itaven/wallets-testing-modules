{
  "name": "wallets-testing-modules5",
  "version": "1.0.0",
  "description": "Common modules for testing wallets",
  "sideEffects": false,
  "scripts": {
    "build": "tsc --build",
    "test": "playwright test",
    "lint": "eslint --ext ts .",
    "publish": "wireit",
    "publish:dry": "release-it --ci --dry-run"
  },
  "devDependencies": {
    "@types/eslint-plugin-prettier": "^3.1.0",
    "@types/node": "^18.11.15",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "dotenv": "^16.0.3",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.1",
    "release-it": "^16.0.0",
    "wireit": "0.4.1",
    "tslib": "^2.4.1",
    "typescript": "4.7.4"
  },
  "lint-staged": {
    ".//src//*.ts": [
      "yarn eslint --max-warnings=0"
    ],
    "./**/*.{ts,js,md,json}": [
      "prettier --write"
    ]
  },
  "wireit": {
    "release": {
      "command": "release-it --no-npm --no-git.requireCleanWorkingDir",
      "dependencies": [
        "./packages/extensions:release",
        "./packages/nodes:release",
        "./packages/wallets:release",
        "./packages/widgets:release"
      ]
    }
  }
}
